<!-- Modal -->
<div id="apptModal" class="modal fade" role="dialog">
  <div class="modal-dialog">

    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Please, state your issue</h4>
      </div>
      <div class="modal-body">
        <form id="userForm" class="form-horizontal">
          <input type="hidden" name="csrfmiddlewaretoken" value="{{ csrf_token }}" /> 
          <input type="hidden" class="form-control" id="day" />
          <input type="hidden" class="form-control" id="hour" />
          <input type="hidden" class="form-control" id="minutes" />
          <input type="text" class="form-control" id="name" placeholder="Your name..." />
          <input type="text" class="form-control" id="reason" placeholder="What bothers you is..." />
          <input type="submit" class="btn btn-default" value="Submit" />
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div>

  </div>
</div>